<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0"
  xmlns="http://java.sun.com/xml/ns/persistence"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <!-- Remote run within EJB-->
  <persistence-unit name="jdbc/Oracle_XE_JDBC_Resource_Mossad" transaction-type="JTA">
    <class>com.mossad.jpa.lib.domain.abstraction.AbstractEntityLite</class>
    <class>com.mossad.jpa.lib.domain.user.User</class>
    <class>com.mossad.jpa.lib.domain.task.Task</class>
    <class>com.mossad.jpa.lib.domain.abstraction.AbstractEntity</class>
    <class>com.mossad.jpa.lib.domain.task.TaskPriority</class>
    <class>com.mossad.jpa.lib.domain.task.TaskStatus</class>
    <class>com.mossad.jpa.lib.domain.task.TaskType</class>
    <jta-data-source>jdbc/Oracle_XE_JDBC_Resource_Mossad</jta-data-source>
  </persistence-unit>
</persistence>
